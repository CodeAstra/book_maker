<% unless section.new_record? %>
  <div id="<%= dom_id section %>" class="section clearfix">
    <%= link_to fa_icon('trash'), "#", remote: true, method: :delete, class: "text-danger section-delete", data: {confirm: "Are you sure you want to delete the section titled: #{section.title}? This is irreversible"} %>
    <%= link_to fa_icon('pencil'), "#", remote: true, class: "section-edit" %>
    <%= link_to section.title, "#", class: "section-title", remote: true %>
  </div>
<% end %>
